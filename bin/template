require "bundler/setup"
require "calculator_generator"

style = CalculatorGenerator::Style.new site: "Keep Thrifty",
                                       brand_color: '#558B2F',
                                       bg_color: '#F5F5F5',
                                       max_width: '600px',
                                       border_color: '#d6d6d6',
                                       focus_color: '#4DBED2',
                                       slider_bar_color: '#fff',
                                       error_color: '#ac0000',
                                       site_styles: []

calc = CalculatorGenerator::Calculator.new title: "Generic Calculator",
                                           site: "Keep Thrifty",
                                           style: style


group = CalculatorGenerator::InputGroup.new title: "A group" do
  currency       title: "A Currency Input", value: "40,000", min: 0
  percent_slider title: "A Percent Slider", value: 0.03, min: 0.01, max: 0.20, step: 0.01
  number_slider  title: "A Number Slider", value: 50, min: 1, max: 60, step: 1
end

calc.add_input_group group

puts calc.render
